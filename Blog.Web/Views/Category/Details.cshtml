@model Blog.Model.Category

<section class="s-pageheader s-pageheader--home">

    <header class="header">
        <div class="header__content row">

            <div class="header__logo">
                <a class="logo" href="@Url.Action("Index", "Home")">
                    <img src="/images/BLG.jpg" alt="Homepage">
                </a>
            </div> <!-- end header__logo -->

            <ul class="header__social">
                <li>
                    <a href="http://www.facebook.com"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                </li>
                <li>
                    <a href="http://www.twitter.com"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                </li>
                <li>
                    <a href="http://www.instagram.com"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                </li>
                <li>
                    <a href="http://www.pinterest.com"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                </li>
            </ul> <!-- end header__social -->

            


            <a class="header__toggle-menu" href="/#0" title="Menu"><span>Menu</span></a>

            <nav class="header__nav-wrap">

                <h2 class="header__nav-heading h6">Site Navigation</h2>

                <ul class="header__nav">
                    <li class="current"><a href="@Url.Action("Index", "Home")">Anasayfa</a></li>
                    <li class="has-children">
                        <a href=>Kategoriler</a>
                        <ul class="sub-menu">

                            @foreach (var item in ViewBag.Categories)
                            {
                                <li>
                                    <a href="@Url.Action("Details","Category",new { id = item.Id })">@item.Name</a>
                                </li>
                            }
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Galery")">Galeri</a>
                    </li>
                    <li><a href="@Url.Action("About", "Home")">Hakkında</a></li>
                    <li><a href="@Url.Action("contact", "Home")">İletişim</a></li>
                </ul> <!-- end header__nav -->

                <a href="/#0" title="Close Menu" class="header__overlay-close close-mobile-menu">Close</a>

            </nav> <!-- end header__nav-wrap -->

        </div> <!-- header-content -->
    </header> <!-- header -->


    <div class="pageheader-content row">
        <div class="col-full">

            <div class="featured">

                <div class="featured__column featured__column--big">

                    <div class="entry">
                        <video width="750" controls>
                            <source src="~/Videos/1.mp4" type="video/mp4">

                        </video>

                    </div> <!-- end entry -->
                </div> <!-- end featured__big -->

                <div class="featured__column featured__column--small">

                    <div class="entry" style="background-image:url('images/thumbs/featured/featured-watch.jpg');">

                        <div class="entry__content">
                            <span class="entry__category"><a href="/#0">GELECEĞİN TEKNOLOJİLERİ</a></span>

                            <h1><a href="/#0" title="">Zaman yönetimi ve sağlık doğru orantılıdır.</a></h1>

                        </div> <!-- end entry__content -->

                    </div> <!-- end entry -->

                    <div class="entry" style="background-image:url('images/thumbs/featured/featured-beetle.jpg');">

                        <div class="entry__content">
                            <span class="entry__category"><a href="/#0">SAĞLIKLI YAŞAM</a></span>

                            <h1><a href="/#0" title="">Sınırlaını sporla keşfet</a></h1>

                        </div> <!-- end entry__content -->

                    </div> <!-- end entry -->

                </div> <!-- end featured__small -->
            </div> <!-- end featured -->

        </div> <!-- end col-full -->
    </div> <!-- end pageheader-content row -->

</section> <!-- end s-pageheader -->
<section class="s-content">

    <div class="row narrow">
        <div class="col-full s-content__header" data-aos="fade-up">
            <h1>@Model.Name</h1>

            <div class="s-content__media col-full">
                <div class="s-content__slider slider">
                    <div class="slider__slides">
                        @foreach (var item in Model.CategoryFiles)
                        {
                            <div class="slider__slide">
                                <img src="@(ViewBag.AssetsUrl)@(item.FileName)" style=" width:100%;" />
                            </div>

                        }
                    </div>
                </div>
            </div> <!-- end s-content__media -->


        </div>
    </div>
    <div class="row">
        <div class="masonry-wrap">
            <div class="masonry">
                @foreach (var item in Model.Posts)
                {
                    <div class="col-md-4">
                        <div class="entry__text">
                            <div class="entry__header"style="background-color:#e6e8ed">
                                @*<a class="entry__header" href="@Url.Action("Details", "Category", new { id = item.Id })"><h3>@item.Title</h3></a>*@
                                <p class="entry__header" style="font-size:40px;color:black;font-family:'Times New Roman' !important; font-weight:bold">@Html.Raw(item.Title)</p>
                            </div>
                        </div>

                        <div class="entry__text">
                            <div class="entry__thumb">

                                <p>@Html.Raw(item.Description)</p>


                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>

    </div>


    

</section> <!-- s-content -->
