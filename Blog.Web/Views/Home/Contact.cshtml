                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-horizontal col-md-12">
                            <div class="col-md-12">
                                <label>Mesajınız <span class="required">*</span></label>
                                <textarea rows="2" id="message_contact" class="form-control" name="Mesajınız" style="margin-left:0px;margin-right:0px; width:631px;"></textarea>
                            </div>
                        </div>
                    </div>


                    <br />
                    <div class="form-group">
                        <div class="col-lg-12 col-md-offset-2" style="float:right">
                            <input type="submit" class="btn btn-primary" value="Gönder" />
                        </div>
                    </div>


