@model IEnumerable<Blog.Model.Galery>

@{
    ViewBag.Title = "Index";
}

<h2>Galery</h2>

<p>
    <button type="button" class="btn btn-success"> @Html.ActionLink("Yeni Resim Ekle", "Create") </button>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>


            <td>
                <button type="button"> @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) </button>
                <button type="button">  @Html.ActionLink("DETAY", "Details", new { id = item.Id })  </button>
                <button type="button">   @Html.ActionLink("SİL", "Delete", new { id = item.Id })  </button>


            </td>
        </tr>
    }

</table>
